@{
    ViewBag.Title = "Galerie";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>


<div id="myBtnContainer">
    <button class="btn active" onclick="filterSelection('all')"> Všechny fotografie</button>
    <button class="btn" onclick="filterSelection('house')"> Statek </button>
    <button class="btn" onclick="filterSelection('bulding')"> Bourárna</button>
    <button class="btn" onclick="filterSelection('people')"> Lidé</button>
</div>

<!-- Images used to open the lightbox -->
<div class="container">
    <div class="row">
        <div class="column house">
            <img src="~/Images1/Galerie/Krava1.jpg" onclick="openModal();currentSlide(1)" class="hover-shadow" height="300" width="300">
        </div>
        <div class="column house">
            <img src="~/Images1/Galerie/Krava2.jpg" onclick="openModal();currentSlide(2)" class="hover-shadow" height="300" width="300">
        </div>
        <div class="column bulding">
            <img src="~/Images1/Galerie/Krava3.jpg" onclick="openModal();currentSlide(3)" class="hover-shadow" height="300" width="300">
        </div>
    </div>

    <div class="row">
        <div class="column people">
            <img src="~/Images1/Galerie/Krava4.jpg" onclick="openModal();currentSlide(4)" class="hover-shadow" height="300" width="300">
        </div>
    </div>
</div>

<!-- The Modal/Lightbox -->
<div id="myModal" class="modal">

    <span class="close cursor" onclick="closeModal()" style="color:white; font-size:55px">&times;</span>

    <div class="modal-content">
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <div class="mySlides">
            <div class="numbertext">1 / 4</div>
            <img src="~/Images1/Galerie/Krava1.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">2 / 4</div>
            <img src="~/Images1/Galerie/Krava2.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">3 / 4</div>
            <img src="~/Images1/Galerie/Krava3.jpg" style="width:100%">
        </div>

        <div class="mySlides">
            <div class="numbertext">4 / 4</div>
            <img src="~/Images1/Galerie/Krava4.jpg" style="width:100%">
        </div>

        <!-- Next/previous controls -->

        <a class="next" onclick="plusSlides(1)">&#10095;</a>


